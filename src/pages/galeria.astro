---
// galeria.astro - Página de Galería
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Galería">
  <!-- Hero Section -->
  <section class="relative bg-blue-bayoux text-white">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-900 to-blue-700 opacity-90"></div>
    <div class="relative container mx-auto px-4 py-20 md:py-24">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-center">Galería</h1>
      <p class="text-xl max-w-3xl mx-auto text-center">Momentos especiales de nuestra comunidad</p>
    </div>
  </section>

  <!-- Filtros de Galería -->
  <section class="py-8 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="flex flex-wrap justify-center gap-4">
          <button class="bg-medium-carmine text-white px-4 py-2 rounded-lg font-medium">Todos</button>
          <button class="bg-gray-200 hover:bg-gray-300 text-neutral px-4 py-2 rounded-lg font-medium transition">Servicios</button>
          <button class="bg-gray-200 hover:bg-gray-300 text-neutral px-4 py-2 rounded-lg font-medium transition">Eventos Especiales</button>
          <button class="bg-gray-200 hover:bg-gray-300 text-neutral px-4 py-2 rounded-lg font-medium transition">Jóvenes</button>
          <button class="bg-gray-200 hover:bg-gray-300 text-neutral px-4 py-2 rounded-lg font-medium transition">Niños</button>
          <button class="bg-gray-200 hover:bg-gray-300 text-neutral px-4 py-2 rounded-lg font-medium transition">Retiros</button>
