---
// Header.astro
---

<header class="bg-white shadow-md">
	<div class="container mx-auto px-4 py-3 flex justify-between items-center">
	  <div class="flex items-center">
		<a href="/" class="font-bold text-xl md:text-2xl text-blue-700">Palabra De Vida Dallas</a>
	  </div>
	  
	  <nav class="hidden md:flex space-x-6">
		<a href="/" class="text-gray-700 hover:text-blue-600 transition">Inicio</a>
		<a href="/nosotros" class="text-gray-700 hover:text-blue-600 transition">Nosotros</a>
		<a href="/servicios" class="text-gray-700 hover:text-blue-600 transition">Servicios</a>
		<a href="/ministerios" class="text-gray-700 hover:text-blue-600 transition">Ministerios</a>
		<a href="/eventos" class="text-gray-700 hover:text-blue-600 transition">Eventos</a>
		<a href="/galeria" class="text-gray-700 hover:text-blue-600 transition">Galería</a>
		<a href="/contacto" class="text-gray-700 hover:text-blue-600 transition">Contacto</a>
	  </nav>
	  
	  <button class="md:hidden text-gray-700" id="mobile-menu-button">
		<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
		  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
		</svg>
	  </button>
	</div>
	
	<!-- Mobile Menu -->
	<div class="md:hidden hidden bg-white w-full absolute z-50" id="mobile-menu">
	  <div class="container mx-auto px-4 py-2 flex flex-col space-y-3">
		<a href="/" class="text-gray-700 hover:text-blue-600 transition py-2 border-b">Inicio</a>
		<a href="/nosotros" class="text-gray-700 hover:text-blue-600 transition py-2 border-b">Nosotros</a>
		<a href="/servicios" class="text-gray-700 hover:text-blue-600 transition py-2 border-b">Servicios</a>
		<a href="/ministerios" class="text-gray-700 hover:text-blue-600 transition py-2 border-b">Ministerios</a>
		<a href="/eventos" class="text-gray-700 hover:text-blue-600 transition py-2 border-b">Eventos</a>
		<a href="/galeria" class="text-gray-700 hover:text-blue-600 transition py-2 border-b">Galería</a>
		<a href="/contacto" class="text-gray-700 hover:text-blue-600 transition py-2">Contacto</a>
	  </div>
	</div>
  </header>
  
  <script>
	// Toggle mobile menu
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');
	
	if (mobileMenuButton && mobileMenu) {
	  mobileMenuButton.addEventListener('click', () => {
		mobileMenu.classList.toggle('hidden');
	  });
	}
  </script>